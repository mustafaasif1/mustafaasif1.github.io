{
  "name": "mustafa-portfolio-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "frontend": "pnpm --filter frontend",
    "backend": "pnpm --filter backend",
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --parallel build",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md}\"",
    "clean": "rm -rf node_modules packages/*/node_modules",
    "install:all": "pnpm install --recursive"
  },
  "devDependencies": {
    "prettier": "^3.6.2"
  },
  "prettier": {
    "useTabs": true,
    "tabWidth": 4
  }
}